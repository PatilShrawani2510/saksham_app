<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenary"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="85dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/correct_feedback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_circle" />

        <ImageView
            android:id="@+id/quiz_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/incorrect_feedback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cancel_circle" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/options_grid"
        android:layout_width="wrap_content"
        android:layout_height="342dp"
        android:layout_marginTop="85dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/option_a"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:backgroundTint="#FFC19E" />

        <Button
            android:id="@+id/option_b"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:backgroundTint="#B3FF9E"/>

        <Button
            android:id="@+id/option_c"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:backgroundTint="#B3FF9E"/>

        <Button
            android:id="@+id/option_d"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:backgroundTint="#FFC19E"/>
    </GridLayout>

</LinearLayout>